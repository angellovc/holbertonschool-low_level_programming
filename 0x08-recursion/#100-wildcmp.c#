#include "holberton.h"

int wildcmp(char *s1, char *s2)
{
	int i = 0;

	if ((*s1 == '\0') && (*s2 == '\0' || (*s2 == '*' && s2[1] == '\0')))
		return (1);
	if (*s1 == '\0' || *s2 == '\0')
		return (0);


	if (*s1 == *s2)
		i = wildcmp((s1 + 1), (s2 + 1));
	if (*s2 == '*' && s2[1] != '*')
	{
		if (*s1 != s2[1])
		        i = wildcmp((s1 + 1)1, s2);
		else if (*s1 == s2[1])
			i = wildcmp((s1 + 1), (s2 + 2));
	}
	else if (*s2 == '*' && s2[1] == '*')
		i = wildcmp(s1, (s2 + 1));
	
	return (i);
}
